        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Photino.Blazor" VersionOverride="3.1.10" />
        <PackageReference Include="Photino.Native" VersionOverride="3.1.6" />
