    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\..\Blazor.Shared.Component\Blazor.Shared.Component.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Content Update="wwwroot\**">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
</Project>
